<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">
		
		<title>Compass Starter by Ariona, Rian</title>

		<!-- Loading third party fonts -->
		<link href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
		<link href="~/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">

		<!-- Loading main css file -->
		<link rel="stylesheet" href="~/css/style.css">
		
		<!--[if lt IE 9]>
		<script src="~/js/ie-support/html5.js"></script>
		<script src="~/js/ie-support/respond.js"></script>
		<![endif]-->
	</head>
	<body>
			<div class="site-header">
				<div class="container">
					<a asp-controller="Home" asp-action="Index" asp class="branding">
						<img src="~/images/logo.png" alt="" class="logo">
						@if (User?.Identity.IsAuthenticated == false)
						{
							<div class="logo-type">
								<form asp-controller="Home" asp-action="Login" >
									<input type="submit" value="Login">
								</form>
							</div>
						}
						else
						{
							<div class="logo-type">
								<h1 class="site-title">Welcome</h1>
								<small class="site-description">
										@User?.Identity.Name
								</small>
								<form asp-controller="Weather" asp-action="Logout" method="get">
									<input type="submit" value="Logout"/>
								</form>
							</div>
						}
					</a>
					<!-- Default snippet for navigation -->
					<div class="main-navigation">
						<button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
						<ul class="menu">
							<li class="menu-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
						</ul> <!-- .menu -->
					</div> 

					<div class="mobile-navigation"></div>

				</div>
			</div> <!-- .site-header -->

			@RenderBody()

			<footer class="site-footer">
				<div class="container">
					<div class="row">
						<div class="col-md-8">
							<form action="#" class="subscribe-form">
								<input type="text" placeholder="Enter your email to subscribe...">
								<input type="submit" value="Subscribe">
							</form>
						</div>
						<div class="col-md-3 col-md-offset-1">
							<div class="social-links">
								<a href="#"><i class="fa fa-facebook"></i></a>
								<a href="#"><i class="fa fa-twitter"></i></a>
								<a href="#"><i class="fa fa-google-plus"></i></a>
								<a href="#"><i class="fa fa-pinterest"></i></a>
							</div>
						</div>
					</div>

					<p>Copyright 2014 Company name. Designed by Themezy. All rights reserved</p>
				</div>
			</footer> <!-- .site-footer -->
	<script src="~/js/jquery-1.11.1.min.js"></script>
	<script src="~/js/plugins.js"></script>
	<script src="~/js/app.js"></script>
	</body>
</html>
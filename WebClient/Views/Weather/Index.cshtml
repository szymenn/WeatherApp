@model WeatherModel
<div class="hero" >
	<h1 style="text-align: center; color:ivory">Click city to get forecast</h1>
</div>

		<div class="container">
			<div class="forecast-container">
				@foreach (var item in Model.WeatherViewModels)
				{
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">@item.Location.City</div>
							</div> <!-- .forecast-header -->
							<a href="https://localhost:5003/Weather/Forecast?city=@item.Location.City" >
								<div class="forecast-content">
									<div class="forecast-icon">
										<img src="@item.Current.Condition.Icon" alt="" width=48>
									</div>
									<div class="degree">@item.Current.TempC<sup>o</sup>C</div>
									<div class="degree">@item.Current.TempF<sup>o</sup>F</div>
									<div class="degree">@item.Current.Wind km/h</div>
								</div>
							</a>
							<form asp-controller="Weather" asp-action="Delete" method="post">
								<input asp-for="City" type="hidden" value="@item.Location.City">
								<input type="submit" style="background-color: red" value="Delete">
							</form>
						</div>
				}
			</div>
		</div>

